#!/bin/sh

. ~interch/etc/server-list.sh

if [ "$1" == "" ]; then
   echo "Missing SQL query to be run on each db server";
   exit 1;
fi

for i in $rodb_servers livedb angelfire
#for i in $rodb_servers angelfire
do
	echo $i


    echo "$1" | ssh $i 'psql -U bcs bcs' > /tmp/sql.tmp.$i
    md5sum /tmp/sql.tmp.$i

done
