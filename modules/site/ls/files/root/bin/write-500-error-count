#!/bin/sh

[ "`cat /etc/bc-role`" = standby ] || exit 1

sleep_time=60

while :
do
	file=/var/www/html/500-error-count
	workfile=$file.build
	{
		echo "<html><head><meta http-equiv=\"refresh\" content=\"$sleep_time\"></head><body><pre>"
		date
		echo
		bin/get_500_error_count_for_today
		echo
		echo "This file updated every ~$sleep_time seconds."
		echo "</pre></body></html>"
	} > $workfile
	mv -f $workfile $file
	sleep $sleep_time
done
