#!/bin/sh

# Checkpoint Postgres
su - -c "psql -U postgres -c 'CHECKPOINT;' bcs" postgres

# Create the LVM snapshot
/usr/sbin/lvcreate -s -n ROOT-SNAP -L 40G /dev/VolGroup00/ROOT || exit 1

# Mount the snapshot as a RO file system
mount -v -o ro -t ext3 /dev/VolGroup00/ROOT-SNAP /mnt/root-snap || exit 1

