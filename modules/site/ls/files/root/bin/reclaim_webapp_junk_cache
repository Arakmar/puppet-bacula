#!/bin/sh

trap "exit 1" INT

. ~interch/etc/server-list.sh

for i in $servers
do
    echo $i

	# Copy over the reclaim_junk_cache script
    scp -p /root/bin/reclaim_junk_cache $i:/root/bin/

	# Run the script
    ssh $i 'time /root/bin/reclaim_junk_cache'

    if [ $? -ne 0 ]; then
        echo "Detected an error running reclaim_junk_cache on host $i.  err=$?"
        exit $?
    fi

done
