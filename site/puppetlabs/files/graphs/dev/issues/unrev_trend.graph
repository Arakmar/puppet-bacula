title       "Puppet issues needing action (including subprojects)"
vtitle      "Redmine tickets"
from        "-6months"
description "Open issues marked with a status requiring further action. As above, includes all of the open-source subprojects in Redmine."
linewidth   2
ymin        0

field :puppetneed,
               :color => "blue",
               :alias => "Puppet total issues needing action (all subprojects)",
               :data  => "redmine.puppet.issues.needs-further-action.total"

field :puppetneedsla,
               :color => "red",
               :alias => "Puppet issues needing action out of SLA (all subprojects)",
               :data  => "redmine.puppet.issues.needs-further-action.out-of-sla"

