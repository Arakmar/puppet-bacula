title       "Puppet: time since last Jenkins success, un-success and failure"
vtitle      "Hours ago"
from        "-1month"
description "Number of hours since the last Jenkins run with each outcome."
linewidth   2
ymin        0

field :success,
               :color => "blue",
               :alias => "Last successful Jenkins run for puppet",
               :data  => "scale(jenkins.puppet.last-success.max.time-ago,0.0002777)"

field :failure,
               :color => "red",
               :alias => "Last failed Jenkins run for puppet",
               :data  => "scale(jenkins.puppet.last-failure.max.time-ago,0.0002777)"

field :unsuccess,
               :color => "orange",
               :alias => "Last unsuccessful Jenkins run for puppet",
               :data  => "scale(jenkins.puppet.last-unsuccessful.max.time-ago,0.0002777)"

