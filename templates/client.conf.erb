Client {
  Name           = <%= @clientcert %>-fd
  Address        = <%= @clientcert %>
  FDPort         = <%= scope.lookupvar('bacula::params::file_port') %>
  Catalog        = MyCatalog
  Password       = "<%= scope.lookupvar('bacula::params::bacula_password') %>"
  File Retention = <%= @file_retention %>
  Job Retention  = <%= @job_retention %>
  AutoPrune      = <%= @autoprune %>

  <%- if scope.lookupvar('bacula::params::ssl') %>
  TLS Enable              = yes
  TLS Require             = yes
  TLS Certificate         = <%= @bacula_dir %>/<%= scope.lookupvar('bacula_director') %>_cert.pem
  TLS Key                 = <%= @bacula_dir %>/<%= scope.lookupvar('bacula_director') %>_key.pem
  TLS CA Certificate File = <%= @bacula_dir %>/ca.pem
  <%- end %>
}

