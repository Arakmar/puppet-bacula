Job {
    Name             = <%= name %>
    Type             = <%= jobtype %>
    Client           = <%= fqdn %>-fd
    FileSet          = <%= fileset_real %>
    Storage          = File
    Pool             = Default
    Messages         = Standard
<% if jobtype == "Restore" -%>
    Where            = /tmp/bacula-restores
<% end -%>
<% if jobtype == "Backup" -%>
    Full Backup Pool        = PuppetLabsPool-Full
    Incremental Backup Pool = PuppetLabsPool-Inc
    JobDefs                 = "PuppetLabsOps"
<% end -%>
}

