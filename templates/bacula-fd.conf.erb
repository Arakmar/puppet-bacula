
Director {
  Name     = <%= bacula_director %>-dir
  Password = "<%= scope.lookupvar('bacula::params::bacula_password') %>"
}

Director {
  Name     = <%= bacula_director %>-mon
  Password = "<%= scope.lookupvar('bacula::params::bacula_password') %>"
  Monitor  = yes
}

FileDaemon {
  Name                    = <%= hostname %>-fd
  FDAddress               = <%= listen_address %>
  FDport                  = <%= scope.lookupvar('bacula::params::file_port') %>
  WorkingDirectory        = <%= working_directory %>
  Pid Directory           = <%= pid_directory %>
  Maximum Concurrent Jobs = 2
}

Messages {
  Name     = Standard
  director = <%= bacula_director %>-dir = all, !skipped, !restored
}

