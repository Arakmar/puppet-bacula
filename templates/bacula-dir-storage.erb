Storage {
  Name       = <%= @clientcert %>-sd
  Address    = <%= @clientcert %>
  SDPort     = <%= @storage_port %>
  Password   = "<%= @bacula_storage_password %>"
  Device     = <%= @device_name %>
  Media Type = <%= @media_type %>
  <%- if scope.lookupvar('bacula::params::ssl') %>
  TLS Enable              = yes
  TLS Require             = yes
  TLS Certificate         = <%= @bacula_dir %>/<%= scope.lookupvar('bacula_director') %>_cert.pem
  TLS Key                 = <%= @bacula_dir %>/<%= scope.lookupvar('bacula_director') %>_key.pem
  TLS CA Certificate File = <%= @bacula_dir %>/ca.pem
  <%- end %>
}

