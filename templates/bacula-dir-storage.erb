Storage {
  Name       = <%= scope.lookupvar('bacula::params::bacula_storage') %>-sd
  Address    = <%= scope.lookupvar('bacula::params::bacula_storage') %>
  SDPort     = <%= scope.lookupvar('bacula::params::storage_port') %>
  Password   = "<%= @bacula_storage_password %>"
  Device     = <%= @device_name %>
  Media Type = <%= @media_type %>
  <%- if scope.lookupvar('bacula::params::ssl') %>
  TLS Enable              = yes
  TLS Require             = yes
  TLS Certificate         = /etc/bacula/ssl/<%= scope.lookupvar('bacula_director') %>_cert.pem
  TLS Key                 = /etc/bacula/ssl/<%= scope.lookupvar('bacula_director') %>_key.pem
  TLS CA Certificate File = /etc/bacula/ssl/ca.pem
  <%- end %>
}

