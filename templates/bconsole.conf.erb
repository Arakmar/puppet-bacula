#
# Bacula User Agent (or Console) Configuration File
#

Director {
  Name     = baal.puppetlabs.com-dir
  DIRport  = <%= @director_port %>
  address  = baal.puppetlabs.com
  Password = "<%= @password %>"
  <%- if scope.lookupvar('bacula::params::ssl') %>
  TLS Enable              = yes
  TLS Require             = yes
  TLS Certificate         = <%= @bacula_dir %>/<%= @clientcert %>_cert.pem
  TLS Key                 = <%= @bacula_dir %>/<%= @clientcert %>_key.pem
  TLS CA Certificate File = <%= @bacula_dir %>/ca.pem
  <%- end %>
}

