#
# Bacula User Agent (or Console) Configuration File
#

Director {
  Name     = frigga.ops.puppetlabs.net-dir
  DIRport  = <%= scope.lookupvar('bacula::params::director_port') %>
  address  = frigga.ops.puppetlabs.net
  Password = "<%= @password %>"
  <%- if scope.lookupvar('bacula::params::ssl') %>
  TLS Enable              = yes
  TLS Require             = yes
  TLS Certificate         = /etc/bacula/ssl/<%= @clientcert %>_cert.pem
  TLS Key                 = /etc/bacula/ssl/<%= @clientcert %>_key.pem
  TLS CA Certificate File = /etc/bacula/ssl/ca.pem
  <%- end %>
}

