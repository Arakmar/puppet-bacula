Storage {
  Name             = <%= fqdn %>-sd
  WorkingDirectory = <%= working_directory %>
  Pid Directory    = <%= pid_directory %>
  SDPort           = <%= port %>
}

#
# List the devices for this Storage Daemon
Device {
  Name           = <%= device_name %>
  Media Type     = <%= media_type %>
  Archive Device = <%= device %>
  LabelMedia     = yes; # lets Bacula label unlabeled media
  Random Access  = Yes;
  AutomaticMount = yes;
  RemovableMedia = no;
  AlwaysOpen     = no;
}

#
# Send all messages to the Director,
Messages {
  Name     = Standard
  director = <%= bacula_director %>-dir = all
}

