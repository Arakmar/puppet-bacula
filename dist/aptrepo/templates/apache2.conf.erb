NameVirtualHost *:<%= port %>
<VirtualHost *:<%= port %>>
        ServerName <%= name %>
        DocumentRoot <%= docroot %>
        <Directory <%= docroot %>>
                Options None
                AllowOverride None
                Order allow,deny
                allow from all
        </Directory>

        <Directory "<%= docroot %>/*/conf">
                Order allow,deny
                Deny from all
                Satisfy all
        </Directory>

       <Directory "<%= docroot %>/*/db">
                Order allow,deny
                Deny from all
                Satisfy all
        </Directory>

</VirtualHost>
