module Pdns
  newrecord("docs.puppetlabs.com") do |query, answer|
    case country(query[:remoteip])
      when "US", "CA"
        answer.content "<%= mirror0 %>"
        answer.content "<%= mirror2 %>"

      else
        answer.content "<%= mirror0 %>"
        answer.content "<%= mirror2 %>"
      end
  end
end
