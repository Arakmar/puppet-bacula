# 
# squid.conf base configuration.
#
# This file is managed by puppet. Any changes will be overwritten on the next
# run of puppet.
visible_hostname  <%= scope.lookupvar('squid::params::hostname') %>
http_port         127.0.0.1:3128
http_port         <%= scope.lookupvar('squid::params::listen') %>:3128 <%= "transparent" if scope.lookupvar('squid::params::transparent') == "true" %>

cache_mgr         root@localhost
coredump_dir /var/spool/squid
hosts_file /etc/hosts
access_log /var/log/squid/access.log squid
