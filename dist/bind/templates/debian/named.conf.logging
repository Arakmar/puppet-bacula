logging {
  channel update_debug {
    file "<%= bind_log_dir %>/update-debug.log" versions 5 size 20m;
    severity  debug 3;
    print-category yes;
    print-severity yes;
    print-time     yes;
  };
  channel security_info    {
    file "<%= bind_log_dir %>/auth.info" versions 10 size 10m;
    severity  info;
    print-category yes;
    print-severity yes;
    print-time     yes;
  };

  category update { update_debug; };
  category security { security_info; };
};
