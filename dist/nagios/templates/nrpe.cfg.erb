log_facility=daemon
pid_file=<%= nrpe_pid %>
server_port=5666
nrpe_user=<%= nrpe_user %>
nrpe_group=<%= nrpe_group %>
allowed_hosts=<%= nrpe_server %>
dont_blame_nrpe=1
# command_prefix=/usr/bin/sudo 
debug=0
command_timeout=60
connection_timeout=300
#allow_weak_random_seed=1

# The following examples use hardcoded command arguments...

command[check_users]=<%= nagios_plugins_path %>/check_users -w 5 -c 10
command[check_load]=<%= nagios_plugins_path %>/check_load -w 15,10,5 -c 30,25,20
command[check_xvda]=<%= nagios_plugins_path %>/check_disk -w 20% -c 10% -p /dev/xvda
command[check_xvdc]=<%= nagios_plugins_path %>/check_disk -w 20% -c 10% -p /dev/xvdc
command[check_alldisks]=<%= nagios_plugins_path %>/check_disk -w 20% -c 10% -l -X devfs -X tmpfs -X sysfs -X udev -X linprocfs
command[check_zombie_procs]=<%= nagios_plugins_path %>/check_procs -w 5 -c 10 -s Z
command[check_total_procs]=<%= nagios_plugins_path %>/check_procs -w 150 -c 200
command[check_mysql]=<%= nagios_plugins_path %>/check_mysql

#command[check_users]=<%= nagios_plugins_path %>/check_users -w $ARG1$ -c $ARG2$
#command[check_load]=<%= nagios_plugins_path %>/check_load -w $ARG1$ -c $ARG2$
#command[check_disk]=<%= nagios_plugins_path %>/check_disk -w $ARG1$ -c $ARG2$ -p $ARG3$
command[check_procs]=<%= nagios_plugins_path %>/check_procs -w $ARG1$ -c $ARG2$ -s $ARG3$
command[check_proc]=<%= nagios_plugins_path %>/check_procs -c $ARG1$ -C $ARG2$
command[check_proc_re]=<%= nagios_plugins_path %>/check_procs -c $ARG1$ --ereg-argument-array $ARG2$
command[file_age]=<%= nagios_plugins_path %>/check_file_age -w $ARG1$ -c $ARG2$ -f $ARG3$


# Ones we have made should go in the artisan-plugins dir and referenced
# accordingly.
command[check_env]=<%= nagios_plugins_path %>/artisan/check_envy.rb
command[check_zfs]=<%= nagios_plugins_path %>/artisan/check_zfs.rb


#
# you can place your config snipplets into nrpe.d/
include_dir=/etc/nagios/nrpe.d/

