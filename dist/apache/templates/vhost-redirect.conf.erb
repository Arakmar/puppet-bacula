NameVirtualHost <%= ipaddress %>:<%= port %>
<VirtualHost <%= ipaddress %>:<%= port %>>
  ServerName <%= srvname %>
<% if serveraliases.is_a? Array %>
<% serveraliases.each do |name| %><%= "  ServerAlias #{name}\n" %><% end %>
<% elsif has_variable?("serveraliases") %>
<%= "  ServerAlias #{serveraliases}" %>
<% end %>
  Redirect / <%= dest %>/
</VirtualHost>

