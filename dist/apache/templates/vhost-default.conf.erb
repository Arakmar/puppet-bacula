NameVirtualHost *:<%= port %>

<VirtualHost *:<%= port %>>
  ServerName <%= name %>
  DocumentRoot <%= docroot %>
  <Directory <%= webdir %>>        
    Options Indexes FollowSymLinks MultiViews
    AllowOverride None
    Order allow,deny
    allow from all
  </Directory>
  ErrorLog /var/log/apache2/error.log
  LogLevel warn
  CustomLog /var/log/apache2/access.log combined
  ServerSignature On
</VirtualHost>
