#
# Define this Storage Daemon
Storage {
  Name             = <%= fqdn %>-sd
  WorkingDirectory = <%= working_directory %>
  Pid Directory    = <%= pid_directory %>
  SDPort           = 9103
  Maximum Concurrent Jobs = 20
}

#
# List the devices for this Storage Daemon
Device {
  Name           = FileStorage
  Media Type     = File
  Archive Device = /bacula
  LabelMedia     = yes; # lets Bacula label unlabeled media
  Random Access  = Yes;
  AutomaticMount = yes;
  RemovableMedia = no;
  AlwaysOpen     = no;
}

#
# Send all messages to the Director,
Messages {
  Name     = Standard
  director = <%= fqdn %>-dir = all
}

