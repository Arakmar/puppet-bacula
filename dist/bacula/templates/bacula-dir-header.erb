Director {                # define myself
  Name                    = <%= fqdn %>-dir
  DIRport                 = <%= port %>  # where we listen for UA connections
  QueryFile               = "/etc/bacula/scripts/query.sql"
  WorkingDirectory        = "/var/lib/bacula"
  PidDirectory            = "/var/run/bacula"
  Maximum Concurrent Jobs = 1
  Password                = "sOjW+LLjaJYm/a6e7F2v0OTVpXGCsQOHPj5bY68D/v8l"  # Console password
  Messages                = Daemon
  DirAddress              = 127.0.0.1
}

# Only one restore job?
Job {
  Name     = "RestoreFiles"
  Type     = Restore
  Client   = <%= fqdn %>-fd
  FileSet  = "PuppetLabsOps"
  Storage  = File
  Where    = /tmp/bacula-restores
  Messages = Standard
  Pool     = Default
}

JobDefs {
  Name = "PuppetLabsOps"
  Type = Backup
  Schedule = "WeeklyCycle"
  Messages = Standard
  Priority = 10
}

FileSet {
  Name = PuppetLabsOps
  Include {
    Options {
      signature = MD5
      compression=gzip
  }
    File = /etc
    File = /opt
    File = /var/www
    File = /var/lib/bacula/mysql
  }
  Exclude {
    File = /var/www/puppetlabs.com/downloads
  }
}

Schedule {
  Name = "WeeklyCycle"
  Run  = Level=Full sun at 2:05
  Run  = Level=Incremental mon-sat at 2:05
}

Pool {
  Name            = Default
  Pool Type       = Backup
  Action On Purge = Truncate
}

